{
  "name": "@mikeped88/airtable-mcp-server",
  "version": "0.3.0",
  "description": "An Airtable Model Context Protocol Server",
  "type": "module",
  "bin": {
    "airtable-server": "build/index.js"
  },
  "files": [
    "build",
    "scripts"
  ],
  "scripts": {
    "build": "tsc && node scripts/post-build.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start": "node index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "model-context-protocol": "^1.0.2",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  },
  "author": "Mike",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/MikePed88/airtable-mcp"
  },
  "keywords": [
    "airtable",
    "mcp",
    "model-context-protocol",
    "claude",
    "api"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}
